{
  "manifest_version": 2,

  "name": "Prello",
  "description": "",
  "version": "1.0.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  "icons": {
   "16": "icon.png",
   "48": "icon.png",
   "128": "icon.png"
  },

  "permissions": [
   "activeTab",
    "storage"
   ],

  "content_scripts": [
  {
    "matches": ["*://trello.com/*"],
    "js": ["jquery.js", "./scripts.js"]
  }
]
}
